{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug MiProyecto",
        "type": "cppvsdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/MiEjecutable.exe",  // Ruta al ejecutable
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": false
          }
        ]
      }
    ]
  }
  